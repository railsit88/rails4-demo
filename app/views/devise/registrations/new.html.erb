<div id="login" class="animate form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1> Sign up </h1> 
    <%= devise_error_messages! %>
    <p> 
      <label for="emailsignup" class="youmail" data-icon="e" > Your email</label>
      <%= f.email_field :email, id:"emailsignup", placeholder: "mysupermail@mail.com", autofocus: true %>
    </p>
    <p> 
      <label for="passwordsignup" class="youpasswd" data-icon="p">Your password </label>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, id:"passwordsignup", placeholder: "eg. X8df!90EO", autocomplete: "off" %>
    </p>
    <p> 
      <label for="passwordsignup_confirm" class="youpasswd" data-icon="p">Please confirm your password </label>
      <%= f.password_field :password_confirmation, id: "passwordsignup_confirm", placeholder: "eg. X8df!90EO", autocomplete: "off" %>
    </p>
    <p class="signin button"> 
      <%= f.submit "Sign up" %> 
    </p>
    <p class="change_link">  
      Already a member ?
      <a href="<%= new_user_session_path %>" class="to_register"> Go and log in </a>
    </p>
  <% end %>
</div>